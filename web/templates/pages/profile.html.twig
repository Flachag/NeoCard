{% extends "layout.html.twig" %}

{% block title 'Mon Profil' %}

{% block comptes %}
    {% for account in accounts %}
        <a class="collapse-item" href="#">{{ account.libelle }}</a>
    {% endfor %}
{% endblock %}

{% block content %}
    <div class="ml-3">
        <div class="col-11 text-center">
            {% if error is not null %}
                <div class="alert alert-danger">
            {{ error }}
        </div>
            {% endif %}
            {% if success is not null %}
                <div class="alert alert-success">
            {{ success }}
        </div>
            {% endif %}
        </div>
    </div>
    <div class="row ml-4">
        <div class="list-group col-2 text-center" id="myList" role="tablist">
            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#all" role="tab">Mes
                informations</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#sent" role="tab">Paramètres</a>
        </div>
        <div class="tab-content col-9">
            <div class="tab-pane active" id="all" role="tabpanel">
                <div class="card">
                    <div class="card-header text-center">Mes informations</div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label>Nom:</label>
                                <input type="text" class="form-control" disabled value="{{ user.name }}">
                            </div>
                            <div class="col-md-2"></div>
                            <div class="form-group col-md-5">
                                <label>Prénom:</label>
                                <input type="text" class="form-control" disabled value="{{ user.surname }}">
                            </div>
                        </div>
                        <div>
                            <div class="form-group-col-md-8">
                                <label>Adresse Email</label>
                                <input type="text" class="form-control" disabled value="{{ user.email }}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="sent" role="tabpanel">
                <div class="card">
                    <div class="card-header text-center">Changer mon Mot de Passe</div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.confirm_password,  { 'attr': {'placeholder': 'Ancien Mot de passe'}}) }}
                        {{ form_row(form.new_password,  { 'attr': {'placeholder': 'Nouveau mot de passe'}}) }}
                        {{ form_row(form.confirm_new_password,  { 'attr': {'placeholder': 'Confirmez le nouveau mot de passe'}}) }}

                        <div class="form-row">
                            <div class="col-md-5"></div>
                            <button type="submit" class="btn btn-primary">Changer mon mot de passe</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}