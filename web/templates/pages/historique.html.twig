{% extends "layout.html.twig" %}

{% block comptes %}
    {% for account in accounts %}
        <a class="collapse-item" href="#">{{ account.libelle }}</a>
    {% endfor %}
{% endblock %}

{% block content %}
    <div class="row ml-4">
        <div class="list-group col-2 text-center" id="myList" role="tablist">
            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#all" role="tab">Tous</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#sent" role="tab">Virements Envoyés</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#receipt" role="tab">Virements Reçus</a>
        </div>
        <div class="tab-content col-9">
            <div class="tab-pane active" id="all" role="tabpanel">
                <div class="card">
                    <div class="card-header text-center">Virements</div>
                    <div class="card-content">
                        {% if transactions is empty %}
                            <div class="card">
                                <div class="card-content">Aucune Transactions</div>
                            </div>
                        {% else %}
                        <table class="table text-center">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Emetteur</th>
                                <th scope="col">Destinataire</th>
                                <th scope="col">Libelle</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Date</th>
                            </tr>
                            </thead>
                            <tbody>
                        {% for transaction in transactions %}
                            <tr>
                                <td>{{ transaction.emetteur.idCompte }}</td>
                                <td>{{ transaction.recepteur.idCompte }}</td>
                                <td>{{ transaction.libelle }}</td>
                                {% for account in accounts %}
                                <td class="{% if transaction.recepteur.idCompte == account.idCompte %} text-success {% else %} text-danger {% endif %}">{{ transaction.montant }}</td>
                                {% endfor %}
                                <td>{{ transaction.date |date('d/m/y')}}</td>
                            </tr>
                        {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="sent" role="tabpanel">
                <div class="card">
                    <div class="card-header text-center">Virements envoyés</div>
                    <div class="card-content">
                        <table class="table text-center">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Destinataire</th>
                                <th scope="col">Libelle</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in transactions %}
                                {% for account in accounts %}
                                    {% if account.idCompte == transaction.emetteur.idCompte %}
                                        <tr>
                                            <th>{{ transaction.recepteur.idCompte }}</th>
                                            <td>{{ transaction.libelle }}</td>
                                            <td class="text-danger">{{ transaction.montant }}</td>
                                            <td>{{ transaction.date |date('d/m/y')}}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="receipt" role="tabpanel">
                <div class="card">
                    <div class="card-header text-center">Virements reçus</div>
                    <div class="card-content">
                        <table class="table text-center">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Emetteur</th>
                                <th scope="col">Libelle</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in transactions %}
                                {% for account in accounts %}
                                    {% if account.idCompte == transaction.recepteur.idCompte %}
                                        <tr>
                                            <th>{{ transaction.emetteur.idCompte }}</th>
                                            <td>{{ transaction.libelle }}</td>
                                            <td class="text-success">{{ transaction.montant }}</td>
                                            <td>{{ transaction.date |date('d/m/y')}}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}